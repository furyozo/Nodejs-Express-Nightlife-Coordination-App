<div id="public-search" class="container">

  <div class="row">

    <div class="col-xs-12">
      <h4>Yelp local bars:</h4>
      <hr>
    </div>

    {{ user.bar_id }}
    {{#each yelps as |yelp|}}
    <div class="col-xs-12 col-sm-6">

      <div class="panel panel-default">
        <div class="panel-heading">
          <span class="glyphicon glyphicon-glass" aria-hidden="true"></span>
          <a href="{{ yelp.url }}">
            {{ yelp.name }}
          </a>
        </div>
        <div class="panel-body text-center">
          <a href="{{ yelp.url }}">
            <div class="img-container pull-left" style="background-image: url('{{ yelp.image_url }}')"></div>
          </a>
          <div class="panel-text">
            <h4>{{ yelp.name }}</h4>
            <br>
            <p>{{ yelp.location.address1 }}, {{ yelp.location.city }}</p>
            <p>{{ yelp.display_phone }}</p>
            <p>Rating: {{ yelp.rating }} / 5</p>
            <p>Review count: {{ yelp.review_count }}</p>
            <div class="panel-bottom">
              <span class="panel-bottomtext">Users: {{yelp.user_count}}</span>
              {{#ifCond ../user.bar_id yelp.id}}
              <a href="/leave/{{ yelp.id }}">
                <button class="btn btn-default btn-xs pull-right panel-button" type="button" name="button">
                  <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                </button>
              </a>
              {{else}}
              <a href="/join/{{ yelp.id }}">
                <button class="btn btn-default btn-xs pull-right panel-button" type="button" name="button">
                  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </button>
              </a>
              {{/ifCond}}
            </div>
          </div>
        </div>
      </div>

    </div>
    {{/each}}

  </div>

</div>
